%% useful commands
\newcommand{\State}[1]{#1}
\newcommand{\StateCmt}[2]{% statement (#1) with comment (#2)
  #1;\quad\tcc*[f]{#2}
}
%% this command is not well implemented (buggy or ugly)
\newcommand{\CmtState}[2]{% comment (#2) and then statement (#1)
  \tcc*[f]{#2} #1\;
}


